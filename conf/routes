# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /sparql                                 Application.sparql
GET     /test/{id}                                 Application.test
GET     /disease/{id}                                Application.disease
GET    /start                                    Application.start
GET    /substance                                    Application.Substance
GET    /document                                   Application.Document
GET    /activity                                   Application.Activity
GET    /assay                                   Application.Assay
GET    /target                                   Application.Target
GET    /protein                                   Application.Protein
GET    /pathway                                   Application.Pathway
GET   /ActivityDetails                              Application.ActivityDetail
GET   /ChEMBLQuery                                Application.ChEMBL





# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
